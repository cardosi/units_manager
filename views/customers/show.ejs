<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Show Customer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <nav>
      <ul>
        <li><a href='/'>Home</a></li>
        <li><a href='/customers'>Customer Dashboard</a></li>
      </ul>
    </nav>
    <h1>Customer: <%=customer.firstName%> <%=customer.lastName%></h1>
    <ul>
      <li>Type: <%=customer.type%></li>
      <li><%=customer.contNeed%> Containers</li>
      <li>Task: <%=customer.task%></li>
      <li>Address:<br/>
        <%=customer.address%><br/>
        <%=customer.city%>, <%=customer.state%> <%=customer.zip%></li>
      <li>Delivery Date: <%=customer.date%></li>
      <%for(var i = 0; i < units.length; i++){%>
        <%if(units[i].customer_id === customer._id.toString()){%>
          <li><a href='/units/<%=units[i]._id%>'>Container: <%=units[i].contNum%></a></li>
        <%}%>
      <%}%>
    </ul>
    <ul>
      <li><a href='/customers/<%=customer._id%>/edit'>Edit This Customer</a></li>
      <li>
        <form action='/customers/<%=customer._id%>?_method=DELETE' method='POST'>
          <input type='submit' value='Remove This Customer'/>
        </form>
      </li>
    </ul>

  </body>
</html>
