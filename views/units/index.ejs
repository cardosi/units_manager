<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>UNITS DashBoard</title>
  </head>
  <body>

    <nav>
      <ul>
        <li><a href='/'>Home</a></li>
      </ul>
    </nav>
    <h1>UNITS DashBoard</h1>
    <h2>Containers</h2>
    <section>
      <ul>
        <li><a href='/units/new/'>Add Container</a></li>
      </ul>
    </section>
    <%var containersOut = 0;%>
    <%for(var i = 0; i < allUnits.length; i++){
        if(allUnits[i].status === "Delivered"){
          containersOut += 1;
        }
      }%>

    <h3>Off Site Units: <%=containersOut%></h3>
    <ul>
      <%for(var i = 0; i < allUnits.length; i++){
        if(allUnits[i].status === "Delivered"){%>
          <li>
            <h5> Customer: <%=allUnits[i].customerFirst%> </h5>
            <ul>
              <li><%=allUnits[i].city%></li>
              <li>Rental Started: <%=moment(allUnits[i].deliveredOn, 'YYYYMMDD').fromNow()%></li>
              <%if(allUnits[i].task === "On Site Storage"){%>
                <input type="submit" value="Schedule Return Empty"/>
              <%}else if(allUnits[i].task === "Warehouse Storage"){%>
                <input type="submit" value="Schedule Return Full"/>
              <%} else{%>
                <input type="submit" value="Schedule Curb To Crub"/>
              <%}%>
            </ul>
          </li>
        <%}
      }%>
    </ul>

    <h3>All Containers</h3>
    <ul>
      <% for(var i = 0; i < allUnits.length; i++){%>
        <li>
          <a href='/units/<%=allUnits[i]._id%>'><%=allUnits[i].contNum%></a>
        </li>
      <%}%>
    </ul>

  </body>
</html>
